#!code calculator.py

def main():
    x = input("What's x?")
    print("x squared is", square(x))

def square(n):
    return n*n

if __name__ == "__main__":
    main()


#!code test_calculator.py

import pytest
from calculator import square

def test_positive():
    assert square(2) == 4
    assert square(3) == 9

def test_negative():
    assert square(-2) == 4
    assert square(-3) == 9

def test_zero():
    assert square(0) == 0

def test_str():
    with pytest.raises(TypeError):
        square("cat")

